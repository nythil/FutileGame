<Window x:Class="FutileGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FutileGame.Views"
        mc:Ignorable="d"
        Title="Futile game" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <views:GameBoard Grid.Column="0"/>
        <StackPanel Grid.Column="2" Orientation="Vertical">
            <TextBlock TextAlignment="Center" FontSize="18" Margin="0,0,0,5">Objective</TextBlock>
            <views:ObjectiveBoard/>
        </StackPanel>
    </Grid>
</Window>
